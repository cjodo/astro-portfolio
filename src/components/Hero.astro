---
import grainSVG from '../assets/grain.svg';
import DownArrow from './icons/DownArrow.astro';
---

<section
	id="hero"
	class="relative h-[85vh] flex flex-col items-center justify-center overflow-hidden shadow-xl"
	style="background: radial-gradient(ellipse at top left, #475569 0%, #334155 25%, #1e293b 40%, #475569 50%, #94a3b8 70%, #cbd5e1 85%, #e2e8f0 100%); border-radius: 0 0 3.3rem 3.3rem;"
	role="banner"
	aria-label="Hero section"
>
	<!-- Subtle background elements -->
	<div class="absolute inset-0 opacity-20" aria-hidden="true">
		<div class="absolute top-20 left-20 w-40 h-40 bg-blue-500/20 rounded-full blur-3xl"></div>
		<div class="absolute bottom-20 right-20 w-32 h-32 bg-purple-500/20 rounded-full blur-2xl"></div>
		<div class="absolute top-1/2 left-1/3 w-24 h-24 bg-cyan-500/15 rounded-full blur-xl"></div>
	</div>
	
	<!-- Grain overlay -->
	<div 
		class="absolute inset-0 opacity-30"
		style={`background-image: url('${grainSVG.src}'); background-repeat: repeat;`}
		aria-hidden="true"
	></div>

	<!-- Main content container -->
	<div class="relative z-20 text-center px-6 max-w-4xl mx-auto">
		<!-- Professional badge -->
		<div class="inline-block mb-8">
			<div class="bg-white/10 backdrop-blur-sm border border-white/20 px-6 py-2">
				<span class="font-semibold text-sm tracking-wider text-white/90">FULL-STACK DEVELOPER</span>
			</div>
		</div>

		<!-- Clean typography -->
		<h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-6 text-white">
			Curtis O'Donnell
		</h1>

		<!-- Professional tagline -->
		<div class="mb-10">
			<p class="text-xl md:text-2xl font-medium text-white/80 max-w-2xl mx-auto">
				Building modern web experiences with clean code and thoughtful design
			</p>
		</div>

		<!-- Web-focused CTA buttons -->
		<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
			<a href="#projects" class="group bg-white text-gray-900 font-semibold px-8 py-3 rounded-lg hover:bg-gray-100 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
				<span class="text-lg">View My Work</span>
			</a>
			
			<a href="#contact" class="group border-2 border-white/30 text-white font-semibold px-8 py-3 rounded-lg hover:bg-white/10 transition-all duration-200 backdrop-blur-sm">
				<span class="text-lg">Get In Touch</span>
			</a>
		</div>

		<!-- Tech stack indicators -->
		<div class="mt-12 flex justify-center gap-8">
			<div class="bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full border border-white/20">
				<div class="text-white font-medium text-sm">
					<span class="text-cyan-300">React</span> • 
					<span class="text-green-300">Node.js</span> • 
					<span class="text-pink-300">TypeScript</span> • 
					<span class="text-orange-300">Astro</span>
				</div>
			</div>
		</div>
	</div>

</section>

<!-- Clean scroll indicator -->
<a href="#about" class="absolute left-1/2 transform -translate-x-1/2 bottom-8 z-30 group" aria-label="Scroll to about section">
	<div class="flex flex-col items-center">
		<div class="w-10 h-10 border-2 border-black/50 rounded-full flex items-center justify-center mb-2 group-hover:border-blue-400 transition-colors duration-200" aria-hidden="true">
			<DownArrow />
		</div>
		<span class="sr-only">Scroll down</span>
	</div>
</a>
