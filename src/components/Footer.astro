---
import grainSVG from '../assets/grain.svg';
import GithubLogo from './icons/GithubLogo.astro';
---

<footer
  id="site-footer"
  class="relative mt-12 bg-[#171717] text-white overflow-hidden"
>
  <!-- Grain overlay for subtle texture -->
  <div class="absolute inset-0 opacity-10 mix-blend-overlay pointer-events-none"></div>

  <div class="relative max-w-7xl mx-auto px-6 py-10 flex flex-col md:flex-row items-center justify-between gap-6">
    <!-- Logo / Site Name -->
    <span class="font-semibold tracking-tight text-xl text-white">
      [cjodo.dev]
    </span>

    <!-- Navigation Links -->
    <nav class="flex gap-6 text-lg font-bold">
      <a href="#projects" class="transition-colors duration-300 hover:text-[#1F4ED8]">Projects</a>
      <a href="#about" class="transition-colors duration-300 hover:text-[#1F4ED8]">About</a>
      <a href="#contact" class="transition-colors duration-300 hover:text-[#1F4ED8]">Contact</a>
    </nav>

    <!-- Socials -->
    <div class="flex gap-4">
      <a href="https://github.com/cjodo" target="_blank" rel="noopener noreferrer" class="hover:text-[#1F4ED8] transition-colors duration-300">
        <!-- GitHub icon -->
				<GithubLogo />
      </a>
    </div>
  </div>

  <div class="relative text-center text-sm text-white/70 mt-4 pb-4">
    Â© {new Date().getFullYear()} Curtis O'Donnell. All rights reserved.
  </div>
</footer>

