---

export type Skill = {
	name: string;
	logo: string;
}

const { skills } = Astro.props

interface Props {
	skills: Skill[]
}
---


<section id="skills" class="py-16 bg-gray-50 dark:bg-[#121212]">
  <div class="max-w-7xl mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-12 text-gray-900 dark:text-white">Skills</h2>
		{ skills.map((skill) => <SkillCard skill={skill}/>) }
  </div>
</section>
